<div id="sheet-attachment-<%= attachment.id %>" 
     class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:shadow-sm transition-shadow">
  
  <div class="flex items-center gap-4 flex-1">
    <!-- ÌååÏùº ÏïÑÏù¥ÏΩò -->
    <div class="flex-shrink-0">
      <% if attachment.file_type&.match?(/pdf/i) %>
        <svg class="h-10 w-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
        </svg>
      <% elsif attachment.file_type&.match?(/jpe?g|png/i) %>
        <svg class="h-10 w-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      <% else %>
        <svg class="h-10 w-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      <% end %>
    </div>
    
    <!-- ÌååÏùº Ï†ïÎ≥¥ -->
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <h4 class="font-medium text-gray-900">
          <%= attachment.file_name || "ÌååÏùºÎ™Ö ÏóÜÏùå" %>
        </h4>
        <% if attachment.attachment_requirement %>
          <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
            <%= attachment.attachment_requirement.name %>
          </span>
        <% end %>
      </div>
      
      <div class="flex items-center gap-4 mt-1 text-sm text-gray-500">
        <span>ÌÅ¨Í∏∞: <%= number_to_human_size(attachment.file_size || 0) %></span>
        <span>ÏóÖÎ°úÎìú: <%= attachment.created_at.strftime("%Y.%m.%d %H:%M") %></span>
      </div>
      
      <!-- Î∂ÑÏÑù ÏÉÅÌÉú -->
      <div id="sheet-attachment-<%= attachment.id %>-status" class="mt-2">
        <%= render partial: "analysis_status", locals: { attachment: attachment } %>
      </div>
      
      <!-- ÏõêÎ≥∏ Îç∞Ïù¥ÌÑ∞ ÌëúÏãú (ÎîîÎ≤ÑÍπÖÏö©) -->
      <% if attachment.analysis_result %>
        <div class="mt-3 p-3 bg-red-50 border border-red-200 rounded">
          <h4 class="font-bold text-red-600 mb-2">üîç ÏõêÎ≥∏ Îç∞Ïù¥ÌÑ∞ (ÎîîÎ≤ÑÍπÖÏö©)</h4>
          <div class="text-xs space-y-2">
            <div>
              <span class="font-semibold">attachment.id:</span> <%= attachment.id %>
            </div>
            <div>
              <span class="font-semibold">attachment.status:</span> <%= attachment.status %>
            </div>
            <div>
              <span class="font-semibold">attachment.completed?:</span> <%= attachment.completed? %>
            </div>
            <div>
              <span class="font-semibold">analysis_result ÌÇ§:</span> 
              <%= attachment.analysis_result.keys.join(', ') %>
            </div>
            <div>
              <span class="font-semibold">summary_data ÏûàÏùå?:</span>
              <%= attachment.analysis_result['summary_data'].present? %>
            </div>
            <% if attachment.analysis_result['summary_data'] %>
              <div>
                <span class="font-semibold">transactions Í∞úÏàò:</span>
                <%= attachment.analysis_result['summary_data']['transactions']&.size || 0 %>
              </div>
            <% end %>
          </div>
          <details class="mt-3">
            <summary class="cursor-pointer text-blue-600 hover:text-blue-800">Ï†ÑÏ≤¥ JSON Î≥¥Í∏∞</summary>
            <pre class="mt-2 p-2 bg-white rounded text-xs overflow-x-auto">
<%= JSON.pretty_generate(attachment.analysis_result) rescue attachment.analysis_result.inspect %>
            </pre>
          </details>
        </div>
      <% else %>
        <div class="mt-3 p-3 bg-yellow-50 border border-yellow-200 rounded">
          <p class="text-yellow-800">‚ö†Ô∏è analysis_resultÍ∞Ä ÏóÜÏäµÎãàÎã§</p>
        </div>
      <% end %>
      
      <!-- transactions Í∞ÑÎã® ÌëúÏãú (ÎîîÎ≤ÑÍπÖÏö©) -->
      <% if attachment.analysis_result && attachment.analysis_result['summary_data'] && attachment.analysis_result['summary_data']['transactions'] %>
        <div class="mt-3 p-3 bg-green-50 border border-green-200 rounded">
          <h4 class="font-bold text-green-600 mb-2">‚úÖ Í±∞Îûò ÎÇ¥Ïó≠ (Í∞ÑÎã® Î≤ÑÏ†Ñ)</h4>
          <% attachment.analysis_result['summary_data']['transactions'].each_with_index do |t, i| %>
            <div class="text-sm border-b py-1">
              <%= i + 1 %>. 
              <%= t['usage_date'] %> | 
              <%= t['merchant_name'] %> | 
              ‚Ç©<%= number_with_delimiter(t['total_amount']) %>
            </div>
          <% end %>
          <div class="mt-2 font-bold text-green-700">
            Ï¥ù <%= attachment.analysis_result['summary_data']['transactions'].size %>Í±¥ / 
            Ìï©Í≥Ñ: ‚Ç©<%= number_with_delimiter(attachment.analysis_result['summary_data']['transactions'].sum { |t| t['total_amount'] || 0 }) %>
          </div>
        </div>
      <% end %>
      
      <!-- AI Î∂ÑÏÑù Í≤∞Í≥º ÌëúÏãú (Ïù∏ÎùºÏù∏ - ÏõêÎ≥∏) -->
      <% if attachment.completed? && attachment.analysis_result.present? %>
        <% if attachment.analysis_result['summary_data'].present? && attachment.analysis_result['summary_data']['transactions'].present? %>
          <div class="mt-3 p-3 bg-gray-50 rounded">
            <div class="font-medium text-gray-700 mb-2">
              AI Î∂ÑÏÑù Í≤∞Í≥º: <%= attachment.analysis_result['summary_data']['transactions'].size %>Í∞ú Í±∞Îûò
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full text-sm">
                <thead>
                  <tr class="border-b">
                    <th class="px-2 py-1 text-left text-xs text-gray-500">Ïù¥Ïö©ÏùºÏûê</th>
                    <th class="px-2 py-1 text-left text-xs text-gray-500">Í∞ÄÎßπÏ†êÎ™Ö</th>
                    <th class="px-2 py-1 text-right text-xs text-gray-500">Ïù¥Ïö©Í∏àÏï°</th>
                    <th class="px-2 py-1 text-right text-xs text-gray-500">ÏàòÏàòÎ£å</th>
                    <th class="px-2 py-1 text-right text-xs text-gray-500">Ìï©Í≥Ñ</th>
                  </tr>
                </thead>
                <tbody>
                  <% total_sum = 0 %>
                  <% attachment.analysis_result['summary_data']['transactions'].each do |t| %>
                    <tr class="border-b">
                      <td class="px-2 py-1 text-gray-600"><%= t['usage_date'] %></td>
                      <td class="px-2 py-1 text-gray-900"><%= t['merchant_name'] %></td>
                      <td class="px-2 py-1 text-right text-gray-900">
                        <%= number_to_currency(t['usage_amount'] || 0, unit: "‚Ç©", precision: 0) %>
                      </td>
                      <td class="px-2 py-1 text-right text-gray-600">
                        <%= number_to_currency(t['fee'] || 0, unit: "‚Ç©", precision: 0) %>
                      </td>
                      <td class="px-2 py-1 text-right font-medium text-gray-900">
                        <%= number_to_currency(t['total_amount'] || 0, unit: "‚Ç©", precision: 0) %>
                      </td>
                    </tr>
                    <% total_sum += (t['total_amount'] || 0) %>
                  <% end %>
                  <tr class="font-medium bg-gray-100">
                    <td colspan="4" class="px-2 py-2 text-gray-700">Ìï©Í≥Ñ</td>
                    <td class="px-2 py-2 text-right text-blue-600">
                      <%= number_to_currency(total_sum, unit: "‚Ç©", precision: 0) %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>
      <% end %>
      
      <!-- Í≤ÄÏ¶ù Í≤∞Í≥º ÌëúÏãú -->
      <% if attachment.validation_summary.present? %>
        <div class="mt-2">
          <% if attachment.validation_summary[:passed] %>
            <span class="text-sm text-green-600">‚úì Í≤ÄÏ¶ù ÌÜµÍ≥º</span>
          <% else %>
            <span class="text-sm text-red-600">‚úó Í≤ÄÏ¶ù Ïã§Ìå®</span>
            <% if attachment.validation_summary[:messages].any? %>
              <ul class="mt-1 text-xs text-gray-600">
                <% attachment.validation_summary[:messages].each do |msg| %>
                  <li>‚Ä¢ <%= msg %></li>
                <% end %>
              </ul>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Ïï°ÏÖò Î≤ÑÌäºÎì§ -->
  <div class="flex items-center gap-2">
    <%= link_to expense_sheet_expense_sheet_attachment_path(attachment.expense_sheet, attachment),
                class: "p-2 text-gray-600 hover:text-blue-600 rounded hover:bg-gray-100",
                title: "ÎØ∏Î¶¨Î≥¥Í∏∞" do %>
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
    <% end %>
    
    <% if attachment.pending? || attachment.failed? %>
      <%= button_to analyze_expense_sheet_expense_sheet_attachment_path(attachment.expense_sheet, attachment),
                    method: :post,
                    class: "p-2 text-gray-600 hover:text-green-600 rounded hover:bg-gray-100",
                    title: "AI Î∂ÑÏÑù ÏãúÏûë",
                    data: { turbo_stream: true } do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>
      <% end %>
    <% end %>
    
    <%= button_to expense_sheet_expense_sheet_attachment_path(attachment.expense_sheet, attachment),
                  method: :delete,
                  class: "p-2 text-gray-600 hover:text-red-600 rounded hover:bg-gray-100",
                  title: "ÏÇ≠Ï†ú",
                  data: { 
                    turbo_stream: true,
                    turbo_confirm: "Ïù¥ Ï≤®Î∂ÄÌååÏùºÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?"
                  } do %>
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>