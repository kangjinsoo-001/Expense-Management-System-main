<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">승인자 그룹 관리</h1>
    <%= link_to '새 그룹 생성', new_admin_approver_group_path, 
                class: 'btn btn-primary',
                data: { turbo_frame: :modal } %>
  </div>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            그룹명
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            설명
          </th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            우선순위
          </th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            멤버 수
          </th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            상태
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            생성자
          </th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            작업
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200" id="approver_groups_list">
        <% @approver_groups.each do |approver_group| %>
          <%= render 'approver_group', approver_group: approver_group %>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @approver_groups.total_pages > 1 %>
    <div class="mt-6">
      <%= paginate @approver_groups %>
    </div>
  <% end %>
</div>

<%= turbo_frame_tag :modal %>