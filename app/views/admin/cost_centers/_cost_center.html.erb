<tr id="<%= dom_id(cost_center) %>">
  <td class="font-medium">
    <%= cost_center.code %>
  </td>
  <td>
    <%= cost_center.name %>
  </td>
  <td class="text-right">
    <% if cost_center.budget_amount %>
      <%= format_currency(cost_center.budget_amount) %>
      <span class="text-xs text-gray-400">(<%= cost_center.fiscal_year %>년)</span>
    <% else %>
      <span class="text-gray-400">-</span>
    <% end %>
  </td>
  <td>
    <%= cost_center.manager&.name || "-" %>
  </td>
  <td>
    <%= cost_center.organization&.name || "전체" %>
  </td>
  <td>
    <span class="<%= cost_center.active? ? 'tremor-badge-success' : 'tremor-badge-error' %> tremor-badge">
      <%= cost_center.active? ? '활성' : '비활성' %>
    </span>
  </td>
  <td class="text-center">
    <div class="flex items-center justify-center gap-1">
      <%= link_to admin_cost_center_path(cost_center), 
          class: "p-1.5 rounded hover:bg-gray-100 transition-colors group",
          title: "보기" do %>
        <svg class="h-4 w-4 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
        </svg>
      <% end %>
      <%= link_to edit_admin_cost_center_path(cost_center), 
          class: "p-1.5 rounded hover:bg-gray-100 transition-colors group",
          title: "편집" do %>
        <svg class="h-4 w-4 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>
      <%= button_to admin_cost_center_path(cost_center), 
          method: :delete,
          data: { 
            confirm: "정말 삭제하시겠습니까?",
            turbo_confirm: "정말 삭제하시겠습니까?"
          },
          class: "p-1.5 rounded hover:bg-red-50 transition-colors group",
          title: "삭제" do %>
        <svg class="h-4 w-4 text-gray-500 group-hover:text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </td>
</tr>