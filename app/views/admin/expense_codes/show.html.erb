<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-4">
          <h1 class="text-2xl font-semibold text-gray-900"><%= @expense_code.name %></h1>
          <div id="flash_container"></div>
        </div>
        <p class="mt-1 text-sm text-gray-500">코드: <%= @expense_code.code %> · 버전 <%= @expense_code.version %></p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4 gap-2">
        <%= link_to edit_admin_expense_code_path(@expense_code), 
            class: "p-2 rounded-lg hover:bg-gray-100 transition-colors group",
            title: "편집" do %>
          <svg class="h-5 w-5 text-gray-600 group-hover:text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
        <%= button_to admin_expense_code_path(@expense_code), 
            method: :delete,
            data: { turbo_confirm: "정말로 삭제하시겠습니까?" },
            class: "p-2 rounded-lg hover:bg-red-50 transition-colors group",
            title: "삭제" do %>
          <svg class="h-5 w-5 text-gray-600 group-hover:text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
        <%= link_to admin_expense_codes_path, 
            class: "p-2 rounded-lg hover:bg-gray-100 transition-colors group",
            title: "목록으로" do %>
          <svg class="h-5 w-5 text-gray-600 group-hover:text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
      </div>
    </div>
  </div>

  <%= render 'show_content', expense_code: @expense_code, approval_rules: @approval_rules %>
</div>

<%= turbo_frame_tag "modal" %>