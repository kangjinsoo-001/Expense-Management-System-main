<%= turbo_frame_tag dom_id(expense_code) do %>
  <!-- 기본 정보 -->
  <div class="tremor-card mb-6">
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">기본 정보</h3>
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">코드</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= expense_code.code %></dd>
        </div>
        
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">버전</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= expense_code.version %></dd>
        </div>
        
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">한도 금액</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if expense_code.limit_amount.present? %>
              <%= expense_code.limit_amount_display %>
            <% else %>
              <span class="text-gray-500">한도 없음</span>
            <% end %>
          </dd>
        </div>
        
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">조직</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= expense_code.organization&.name || "전체" %></dd>
        </div>
        
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">상태</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <span class="<%= expense_code.active? ? 'tremor-badge tremor-badge-success' : 'tremor-badge tremor-badge-error' %>">
              <%= expense_code.active? ? '활성' : '비활성' %>
            </span>
          </dd>
        </div>
        
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">생성일</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= l expense_code.created_at, format: :long %>
          </dd>
        </div>
        
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">설명</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= expense_code.description.presence || "-" %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- 검증 규칙 -->
  <div class="tremor-card mb-6">
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">검증 규칙</h3>
      
      <div class="mb-4">
        <h4 class="text-sm font-medium text-gray-700 mb-2">필수 필드</h4>
        <% if expense_code.required_fields.present? %>
          <% if expense_code.required_fields.is_a?(Array) %>
            <!-- 이전 버전 호환성 -->
            <ul class="list-disc list-inside text-sm text-gray-600">
              <% expense_code.required_fields.each do |field| %>
                <li><%= field %></li>
              <% end %>
            </ul>
          <% else %>
            <!-- 새로운 구조 -->
            <div class="space-y-2">
              <% expense_code.required_fields.each do |field_key, field_config| %>
                <div class="p-3 bg-gray-50 rounded-lg">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <span class="font-medium text-gray-900"><%= field_config['label'] || field_key %></span>
                      <span class="tremor-badge tremor-badge-blue">
                        <%= ExpenseCode::FIELD_TYPES[field_config['type'].to_s.to_sym] || field_config['type'] %>
                      </span>
                      <% if field_config['required'] != false %>
                        <span class="tremor-badge tremor-badge-error">필수</span>
                      <% else %>
                        <span class="tremor-badge tremor-badge-gray">선택</span>
                      <% end %>
                    </div>
                  </div>
                  <% if field_config['type'] == 'select' && field_config['options'].present? %>
                    <div class="mt-2 text-xs text-gray-600">
                      선택지: <%= field_config['options'].join(', ') %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p class="text-sm text-gray-500">없음</p>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- 승인 규칙 -->
  <div class="tremor-card mb-6">
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">승인 규칙</h3>
      
      <% approval_rules ||= expense_code.expense_code_approval_rules.includes(:approver_group).ordered %>
      <% if approval_rules.any? %>
        <div class="space-y-3">
          <% approval_rules.each do |rule| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex items-center gap-3">
                <span class="text-sm font-medium text-gray-900">
                  <%= rule.approver_group.name %>
                </span>
                <% if rule.condition.present? %>
                  <span class="text-xs text-gray-500">
                    조건: <%= rule.condition %>
                  </span>
                <% else %>
                  <span class="text-xs text-gray-500">모든 경우</span>
                <% end %>
              </div>
              <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                순서: <%= rule.order %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500">설정된 승인 규칙이 없습니다.</p>
      <% end %>
    </div>
  </div>
<% end %>