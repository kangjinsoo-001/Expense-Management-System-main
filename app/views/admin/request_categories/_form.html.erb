<%= form_with(model: [:admin, request_category], class: "bg-white shadow-sm rounded-lg p-6") do |form| %>
  <% if request_category.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <p class="font-bold">다음 오류를 수정해주세요:</p>
      <ul class="mt-2 list-disc list-inside">
        <% request_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="space-y-4">
    <div>
      <%= form.label :name, "카테고리명", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
          required: true, 
          placeholder: "예: 정보보안" %>
    </div>
    
    <div>
      <%= form.label :description, "설명", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
          rows: 3,
          placeholder: "카테고리에 대한 간단한 설명을 입력하세요" %>
    </div>
    
    <div>
      <%= form.label :display_order, "표시 순서", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :display_order, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", 
          min: 0 %>
      <p class="mt-1 text-sm text-gray-500">숫자가 작을수록 먼저 표시됩니다</p>
    </div>
    
    <div class="flex items-center">
      <%= form.check_box :is_active, 
          class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded",
          checked: request_category.is_active %>
      <%= form.label :is_active, "활성화", class: "ml-2 block text-sm text-gray-900" %>
    </div>
  </div>
  
  <div class="mt-6 flex items-center justify-end space-x-3">
    <%= link_to "취소", admin_request_categories_path, 
        class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit "저장", 
        class: "bg-indigo-600 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>