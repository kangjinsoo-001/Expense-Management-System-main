<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- 헤더 영역 -->
  <div class="mb-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-semibold text-gray-900">첨부파일 AI 분석 관리</h1>
        <p class="mt-1 text-sm text-gray-500">경비 항목 및 경비 시트의 첨부파일 AI 분석 설정을 관리합니다</p>
      </div>
    </div>
  </div>
  
  <!-- 경비 항목 첨부파일 AI 분석 섹션 -->
  <div class="mb-8">
    <div class="mb-4 flex justify-between items-center">
      <div>
        <h2 class="text-lg font-semibold text-gray-900">
          <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800 mr-2">
            경비 항목
          </span>
          첨부파일 AI 분석
        </h2>
        <p class="mt-1 text-sm text-gray-500">영수증 분류 및 요약 AI 분석 설정</p>
      </div>
      <%= link_to new_admin_attachment_requirement_path(type: 'expense_item'), 
                  class: "tremor-button-primary" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        새 요구사항 추가
      <% end %>
    </div>
    
    <% if @expense_item_requirements.any? %>
      <div class="tremor-card">
        <div class="overflow-x-auto">
          <table class="tremor-table">
            <thead>
              <tr>
                <th class="text-center">순서</th>
                <th class="text-left">이름</th>
                <th class="text-left">설명</th>
                <th class="text-left">파일 형식</th>
                <th class="text-center">필수</th>
                <th class="text-center">활성</th>
                <th class="text-center">AI 규칙</th>
                <th class="text-center">작업</th>
              </tr>
            </thead>
            <tbody>
              <% @expense_item_requirements.each do |requirement| %>
                <tr class="hover:bg-gray-50">
                  <td class="text-center">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                      <%= requirement.position %>
                    </span>
                  </td>
                  <td>
                    <%= link_to requirement.name, admin_attachment_requirement_path(requirement), 
                                class: "text-blue-600 hover:text-blue-700 font-medium" %>
                  </td>
                  <td class="text-gray-500 text-sm">
                    <%= truncate(requirement.description, length: 50) %>
                  </td>
                  <td>
                    <% if requirement.file_types.present? %>
                      <% requirement.file_types.each do |type| %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mr-1">
                          <%= type.upcase %>
                        </span>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">모든 형식</span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <% if requirement.required? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                        필수
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
                        선택
                      </span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <% if requirement.active? %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                        활성
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800">
                        비활성
                      </span>
                    <% end %>
                  </td>
                  <td class="text-center">
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800" title="분석 규칙">
                      분석: <%= requirement.analysis_rules.count %>
                    </span>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800 ml-1" title="검증 규칙">
                      검증: <%= requirement.validation_rules.count %>
                    </span>
                  </td>
                  <td class="text-center">
                    <div class="flex justify-center space-x-2">
                      <%= link_to "보기", admin_attachment_requirement_path(requirement), 
                                  class: "text-sm text-blue-600 hover:text-blue-700" %>
                      <%= link_to "수정", edit_admin_attachment_requirement_path(requirement), 
                                  class: "text-sm text-blue-600 hover:text-blue-700" %>
                      <%= button_to "삭제", admin_attachment_requirement_path(requirement), 
                                    method: :delete,
                                    data: { 
                                      turbo_confirm: "정말 삭제하시겠습니까?",
                                      turbo_method: :delete 
                                    },
                                    class: "text-sm text-red-600 hover:text-red-700" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="tremor-card bg-blue-50">
        <div class="p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3 flex-1 md:flex md:justify-between">
              <p class="text-sm text-blue-700">
                경비 항목용 첨부파일 요구사항이 없습니다.
              </p>
              <p class="mt-3 text-sm md:mt-0 md:ml-6">
                <%= link_to "첫 요구사항 추가하기", new_admin_attachment_requirement_path(type: 'expense_item'), 
                            class: "whitespace-nowrap font-medium text-blue-700 hover:text-blue-600" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
