<% content_for :title, "경비 시트 관리" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-semibold text-gray-900">경비 시트 관리</h1>
        <p class="mt-1 text-sm text-gray-500">전체 경비 시트를 관리하고 검토할 수 있습니다</p>
      </div>
    </div>
  </div>

  <!-- 필터링 옵션 -->
  <div class="tremor-card mb-6">
    <div class="p-6">
      <%= form_with url: admin_expense_sheets_path, method: :get, 
                    class: "flex flex-wrap gap-4",
                    data: { 
                      turbo_frame: "expense_sheets_list",
                      controller: "auto-submit",
                      auto_submit_delay_value: "500"
                    } do |f| %>
      <div class="flex-1 min-w-[150px]">
        <%= f.label :status, "상태", class: "block text-sm font-medium text-gray-700" %>
        <%= f.select :status, options_for_select([
          ['전체', ''],
          ['작성중', 'draft'],
          ['제출됨', 'submitted'],
          ['승인됨', 'approved'],
          ['반려됨', 'rejected'],
          ['마감됨', 'closed']
        ], params[:status]), {}, 
            class: "mt-1 tremor-input",
            data: { action: "change->auto-submit#submit" } %>
      </div>
      
      <div class="flex-1 min-w-[150px]">
        <%= f.label :year_month, "연도-월", class: "block text-sm font-medium text-gray-700" %>
        <% 
          # 기존 year, month 파라미터가 있으면 year_month 형식으로 변환
          year_month_value = if params[:year].present? && params[:month].present?
            "#{params[:year]}-#{sprintf('%02d', params[:month].to_i)}"
          elsif params[:year_month].present?
            params[:year_month]
          else
            Date.current.strftime("%Y-%m")  # 기본값을 현재 날짜로 설정
          end
        %>
        <%= f.month_field :year_month, 
            value: year_month_value,
            class: "mt-1 tremor-input",
            placeholder: "전체",
            data: { action: "change->auto-submit#submit" } %>
      </div>
      
      <%# 필터 적용 버튼 제거 - 자동 적용으로 변경 %>
      <% end %>
    </div>
  </div>

  <%= turbo_frame_tag "expense_sheets_list" do %>
  <!-- 전체 엑셀 다운로드 버튼 -->
  <div class="mb-6">
    <%= link_to export_all_admin_expense_sheets_path(format: :xlsx, params: params.permit(:status, :year, :month, :year_month, :organization_id, :user_id)), 
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
      <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      전체 엑셀 다운로드
    <% end %>
    <span class="ml-2 text-sm text-gray-500">
      (필터링된 <%= @stats[:total] %>개 시트)
    </span>
  </div>

  <!-- 통계 정보 -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-6">
    <div class="tremor-metric-card">
      <p class="tremor-metric-label">전체</p>
      <p class="tremor-metric-value"><%= @stats[:total] %></p>
    </div>
    <div class="tremor-metric-card">
      <p class="tremor-metric-label">작성중</p>
      <p class="tremor-metric-value text-blue-600"><%= @stats[:draft] %></p>
    </div>
    <div class="tremor-metric-card">
      <p class="tremor-metric-label">제출됨</p>
      <p class="tremor-metric-value text-yellow-600"><%= @stats[:submitted] %></p>
    </div>
    <div class="tremor-metric-card">
      <p class="tremor-metric-label">승인됨</p>
      <p class="tremor-metric-value text-green-600"><%= @stats[:approved] %></p>
    </div>
    <div class="tremor-metric-card">
      <p class="tremor-metric-label">반려됨</p>
      <p class="tremor-metric-value text-red-600"><%= @stats[:rejected] %></p>
    </div>
  </div>

  <!-- 경비 시트 목록 테이블 -->
  <div class="tremor-card">
    <div class="overflow-x-auto">
      <table class="tremor-table">
        <thead>
          <tr>
            <th class="text-left">기간</th>
            <th class="text-left">사용자</th>
            <th class="text-left">조직</th>
            <th class="text-left">상태</th>
            <th class="text-center">항목 수</th>
            <th class="text-center">첨부파일</th>
            <th class="text-right">총액</th>
            <th class="text-left">제출일</th>
            <th class="text-center w-20">작업</th>
          </tr>
        </thead>
        <tbody>
        <% @expense_sheets.each do |expense_sheet| %>
          <tr>
            <td class="font-medium">
              <%= expense_sheet.year %>년 <%= expense_sheet.month %>월
            </td>
            <td>
              <%= expense_sheet.user.name %>
            </td>
            <td>
              <%= expense_sheet.organization&.name || '조직 없음' %>
            </td>
            <td>
              <% status_badges = {
                'draft' => 'tremor-badge-gray',
                'submitted' => 'tremor-badge-blue',
                'approved' => 'tremor-badge-success',
                'rejected' => 'tremor-badge-error',
                'closed' => 'tremor-badge-purple'
              } %>
              <span class="<%= status_badges[expense_sheet.status] || 'tremor-badge-gray' %> tremor-badge">
                <%= expense_sheet_status_text(expense_sheet.status) %>
              </span>
            </td>
            <td class="text-center">
              <%= expense_sheet.expense_items_count %>
            </td>
            <td class="text-center">
              <% attachment_count = @attachment_counts[expense_sheet.id] || 0 %>
              <% if attachment_count > 0 %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                  <%= attachment_count %>
                </span>
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
            <td class="text-right font-semibold">
              <%= format_currency(expense_sheet.total_amount) %>
            </td>
            <td>
              <%= expense_sheet.submitted_at&.strftime("%Y-%m-%d") || "-" %>
            </td>
            <td class="text-center">
              <div class="flex items-center justify-center gap-1">
                <%= link_to admin_expense_sheet_path(expense_sheet), 
                            class: "p-1.5 rounded hover:bg-gray-100 transition-colors group",
                            data: { turbo_frame: "_top" },
                            title: "보기" do %>
                  <svg class="h-4 w-4 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
    <% if @expense_sheets.empty? %>
      <div class="text-center py-16">
        <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gray-100">
          <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-medium text-gray-900">경비 시트가 없습니다</h3>
        <p class="mt-2 text-sm text-gray-500">검색 조건에 맞는 경비 시트가 없습니다</p>
      </div>
    <% end %>
  </div>

  <!-- 페이지네이션 -->
  <% if @expense_sheets.respond_to?(:total_pages) %>
    <div class="mt-6 flex justify-center">
      <%= paginate @expense_sheets, params: { turbo_frame: "expense_sheets_list" } %>
    </div>
  <% end %>
  <% end %>
</div>