<% content_for :title, "경비 시트 상세 - #{@expense_sheet.year}년 #{@expense_sheet.month}월" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <div class="mb-6 flex justify-between items-center">
    <div>
      <h1 class="text-2xl font-semibold text-gray-900">
        <%= @expense_sheet.year %>년 <%= @expense_sheet.month %>월 경비 시트
      </h1>
      <div class="mt-2 flex items-center space-x-4 text-sm text-gray-600">
        <span class="flex items-center">
          <svg class="mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <%= @expense_sheet.user.name %>
        </span>
        <span class="flex items-center">
          <svg class="mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
          <%= @expense_sheet.organization&.name || '조직 없음' %>
        </span>
      </div>
    </div>
    <div class="flex items-center space-x-2">
      <span class="<%= expense_sheet_status_class(@expense_sheet.status) %> inline-flex items-center px-3 py-1 rounded-full text-sm font-medium">
        <%= expense_sheet_status_text(@expense_sheet.status) %>
      </span>
      <%= link_to admin_expense_sheets_path, 
          class: "p-2 rounded-lg hover:bg-gray-100 transition-colors group",
          title: "목록으로" do %>
        <svg class="h-5 w-5 text-gray-600 group-hover:text-gray-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- 요약 정보 -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">요약 정보</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">총 금액</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= format_currency(@expense_sheet.expense_items.sum(:amount)) %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">경비 항목 수</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @expense_sheet.expense_items.count %>개
          </dd>
        </div>
        <% if @expense_sheet.pdf_attachments.any? || @expense_sheet_attachments.any? %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">첨부파일</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <div class="space-y-2">
                <% # ActiveStorage pdf_attachments 표시 %>
                <% @expense_sheet.pdf_attachments.each_with_index do |attachment, index| %>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600" title="<%= attachment.filename %>">
                      <%= attachment.filename.to_s.truncate(30, omission: '...') %>
                    </span>
                    <div class="flex items-center space-x-2">
                      <% pdf_result = @pdf_analysis_results.find { |r| r.pdf_attachment_id == attachment.id } %>
                      <% if pdf_result %>
                        <button data-pdf-result-id="<%= pdf_result.id %>"
                                class="pdf-analysis-preview text-blue-600 hover:text-blue-800 cursor-pointer"
                                title="AI 분석 보기">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                          </svg>
                        </button>
                      <% end %>
                      <%= link_to rails_blob_path(attachment, disposition: "attachment"),
                                  class: "text-green-600 hover:text-green-800",
                                  title: "다운로드" do %>
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <% # ExpenseSheetAttachment 표시 %>
                <% @expense_sheet_attachments.each do |sheet_attachment| %>
                  <% if sheet_attachment.file.attached? %>
                    <div class="flex items-center justify-between">
                      <span class="text-sm text-gray-600" title="<%= sheet_attachment.file_name %>">
                        <%= sheet_attachment.file_name.to_s.truncate(30, omission: '...') %>
                      </span>
                      <div class="flex items-center space-x-2">
                        <% if sheet_attachment.analysis_result.present? && sheet_attachment.analysis_result['summary_data'].present? %>
                          <button onclick="showSheetAttachment(<%= sheet_attachment.id %>)"
                                  class="text-blue-600 hover:text-blue-800 cursor-pointer"
                                  title="AI 분석 보기">
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                            </svg>
                          </button>
                          <!-- AI 분석 데이터를 숨겨진 div에 저장 -->
                          <div id="sheet-attachment-<%= sheet_attachment.id %>-data" class="hidden"
                               data-id="<%= sheet_attachment.id %>"
                               data-name="<%= sheet_attachment.file_name %>"
                               data-size="<%= number_to_human_size(sheet_attachment.file_size || 0) %>"
                               data-url="<%= rails_blob_url(sheet_attachment.file, disposition: 'inline') if sheet_attachment.file.attached? %>"
                               data-download-url="<%= rails_blob_url(sheet_attachment.file, disposition: 'attachment') if sheet_attachment.file.attached? %>">
                            <!-- 서버에서 렌더링된 AI 요약 HTML -->
                            <div class="sheet-attachment-summary-content">
                              <%= render 'expense_sheet_attachments/summary', attachment: sheet_attachment %>
                            </div>
                          </div>
                        <% end %>
                        <%= link_to rails_blob_path(sheet_attachment.file, disposition: "attachment"),
                                    class: "text-green-600 hover:text-green-800",
                                    title: "다운로드" do %>
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                          </svg>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </dd>
          </div>
        <% end %>
        <div class="<%= (@expense_sheet.pdf_attachments.any? || @expense_sheet_attachments.any?) ? 'bg-white' : 'bg-gray-50' %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">생성일</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= l @expense_sheet.created_at, format: :long %>
          </dd>
        </div>
        <% if @expense_sheet.submitted_at.present? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">제출일</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= l @expense_sheet.submitted_at, format: :long %>
            </dd>
          </div>
        <% end %>
        <% if @expense_sheet.remarks.present? %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">비고</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <%= @expense_sheet.remarks %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- AI 검증 결과 (접을 수 있는 섹션) -->
  <% if @expense_sheet.validation_result.present? || @validation_histories.any? %>
    <details class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
      <summary class="px-4 py-5 sm:px-6 border-b border-gray-200 cursor-pointer hover:bg-gray-50 transition-colors">
        <div class="flex items-center justify-between pointer-events-none">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            <span class="text-xl mr-2">🤖</span>AI 검증 결과
          </h3>
          <div class="flex items-center space-x-2">
            <% if @expense_sheet.validated_at.present? %>
              <span class="text-sm text-gray-500">
                검증일: <%= l @expense_sheet.validated_at, format: :short %>
              </span>
            <% end %>
            <svg class="h-5 w-5 text-gray-400 transform transition-transform details-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </div>
      </summary>
      <div class="border-t border-gray-200">
        <div class="p-0">
          <%= render partial: "expense_sheets/validation_details_table", 
                     locals: { expense_sheet: @expense_sheet, 
                              expense_items: @expense_items } %>
        </div>
      </div>
    </details>
  <% end %>

  <!-- 경비 항목 목록 -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">경비 항목</h3>
    </div>
    <div class="border-t border-gray-200">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              날짜
            </th>
            <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              경비 코드
            </th>
            <th scope="col" class="px-3 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              설명
            </th>
            <th scope="col" class="px-3 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              첨부
            </th>
            <th scope="col" class="px-3 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              금액
            </th>
            <th scope="col" class="px-3 py-2 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
              상태
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @expense_items.each do |item| %>
            <tr class="text-sm">
              <td class="px-3 py-2 text-gray-600">
                <%= item.expense_date.strftime('%m/%d') %>
              </td>
              <td class="px-3 py-2 text-gray-700">
                <%= item.expense_code.name %>
              </td>
              <td class="px-3 py-2 text-gray-700">
                <%= truncate(item.description, length: 30) %>
              </td>
              <td class="px-3 py-2 text-center">
                <% attachment_count = item.expense_attachments.count %>
                <% if attachment_count > 0 %>
                  <button type="button" 
                          onclick="showExpenseItemAttachments(<%= item.id %>)"
                          class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors cursor-pointer">
                    <svg class="h-3 w-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                    </svg>
                    <%= attachment_count %>
                  </button>
                  <!-- 첨부파일 데이터를 숨겨진 div에 저장 -->
                  <div id="expense-item-<%= item.id %>-attachments" class="hidden">
                    <% item.expense_attachments.each_with_index do |attachment, index| %>
                      <div class="attachment-data-<%= index %>" 
                           data-id="<%= attachment.id %>"
                           data-name="<%= attachment.file_name || (attachment.file.filename.to_s if attachment.file.attached?) %>"
                           data-size="<%= number_to_human_size(attachment.file_size || (attachment.file.byte_size if attachment.file.attached?) || 0) %>"
                           data-url="<%= rails_blob_url(attachment.file, disposition: 'inline') if attachment.file.attached? %>"
                           data-download-url="<%= rails_blob_url(attachment.file, disposition: 'attachment') if attachment.file.attached? %>">
                        <!-- 서버에서 렌더링된 AI 요약 HTML -->
                        <div class="attachment-summary-content">
                          <%= render 'expense_attachments/summary', attachment: attachment %>
                        </div>
                      </div>
                        <%# 기존 인라인 모달 코드는 제거함 %>
                          <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-2xl shadow-lg rounded-md bg-white">
                            <div class="mt-3">
                              <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">AI 분석 결과</h3>
                              <p class="text-sm text-gray-500 mb-4">파일: <%= attachment.file.filename %></p>
                              
                              <% if attachment.ai_processed && attachment.summary_data.present? %>
                                <div class="p-3 bg-blue-50 rounded-md border border-blue-200">
                                  <div class="flex items-center mb-2">
                                    <svg class="h-4 w-4 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                                    </svg>
                                    <p class="text-xs font-medium text-blue-700">AI 요약 결과</p>
                                    <% if attachment.receipt_type.present? %>
                                      <span class="ml-2 px-2 py-0.5 text-xs bg-blue-100 text-blue-700 rounded">
                                        <%= attachment.receipt_type == 'telecom' ? '통신비' : attachment.receipt_type == 'general' ? '일반' : attachment.receipt_type %>
                                      </span>
                                    <% end %>
                                  </div>
                                  
                                  <% begin %>
                                    <% summary = JSON.parse(attachment.summary_data) %>
                                    <div class="space-y-1">
                                      <% if attachment.receipt_type == 'telecom' %>
                                        <% if summary['total_amount'] %>
                                          <p class="text-sm text-gray-900 font-bold mb-1">
                                            <span>총 청구금액:</span> 
                                            <%= number_to_currency(summary['total_amount'], unit: "₩", precision: 0) %>
                                          </p>
                                          <div class="ml-3 border-l-2 border-gray-300 pl-2">
                                        <% end %>
                                        <% if summary['service_charge'] %>
                                          <p class="text-xs text-gray-700">
                                            <span class="font-medium">통신 서비스 요금:</span> 
                                            <%= number_to_currency(summary['service_charge'], unit: "₩", precision: 0) %>
                                          </p>
                                        <% end %>
                                        <% if summary['additional_service_charge'] && summary['additional_service_charge'] > 0 %>
                                          <p class="text-xs text-gray-700">
                                            <span class="font-medium">부가 서비스 요금:</span> 
                                            <%= number_to_currency(summary['additional_service_charge'], unit: "₩", precision: 0) %>
                                          </p>
                                        <% end %>
                                        <% if summary['device_installment'] && summary['device_installment'] > 0 %>
                                          <p class="text-xs text-gray-700">
                                            <span class="font-medium">단말기 할부금:</span> 
                                            <%= number_to_currency(summary['device_installment'], unit: "₩", precision: 0) %>
                                          </p>
                                        <% end %>
                                        <% if summary['other_charges'] && summary['other_charges'] > 0 %>
                                          <p class="text-xs text-gray-700">
                                            <span class="font-medium">기타 요금:</span> 
                                            <%= number_to_currency(summary['other_charges'], unit: "₩", precision: 0) %>
                                          </p>
                                        <% end %>
                                        <% if summary['discount_amount'] && summary['discount_amount'] != 0 %>
                                          <p class="text-xs text-red-600">
                                            <span class="font-medium">할인 금액:</span> 
                                            -<%= number_to_currency(summary['discount_amount'].abs, unit: "₩", precision: 0) %>
                                          </p>
                                        <% end %>
                                        <% if summary['billing_period'] %>
                                          <p class="text-xs text-gray-600 mt-2">
                                            <span class="font-medium">청구 기간:</span> 
                                            <%= summary['billing_period'] %>
                                          </p>
                                        <% end %>
                                        <% if summary['total_amount'] %>
                                          </div>
                                        <% end %>
                                      <% else %>
                                        <% # 일반 영수증 처리 %>
                                        <% if summary['vendor'] %>
                                          <p class="text-sm text-gray-900 font-bold mb-1">
                                            <%= summary['vendor'] %>
                                          </p>
                                        <% end %>
                                        <% if summary['date'] %>
                                          <p class="text-xs text-gray-700">
                                            <span class="font-medium">날짜:</span> <%= summary['date'] %>
                                          </p>
                                        <% end %>
                                        <% if summary['amount'] %>
                                          <p class="text-sm text-gray-900 font-bold">
                                            <span>금액:</span> 
                                            <%= number_to_currency(summary['amount'], unit: "₩", precision: 0) %>
                                          </p>
                                        <% end %>
                                        <% if summary['items'] && summary['items'].any? %>
                                          <div class="mt-2">
                                            <p class="text-xs font-medium text-gray-700">항목:</p>
                                            <ul class="ml-3 list-disc list-inside">
                                              <% summary['items'].each do |item| %>
                                                <li class="text-xs text-gray-600"><%= item %></li>
                                              <% end %>
                                            </ul>
                                          </div>
                                        <% end %>
                                        <% if summary['summary_text'] %>
                                          <p class="text-xs text-gray-600 mt-2">
                                            <%= summary['summary_text'] %>
                                          </p>
                                        <% end %>
                                      <% end %>
                                    </div>
                                  <% rescue JSON::ParserError %>
                                    <p class="text-xs text-gray-600"><%= attachment.summary_data %></p>
                                  <% end %>
                                </div>
                              <% elsif attachment.extracted_text.present? %>
                                <div class="p-3 bg-gray-50 rounded-md">
                                  <p class="text-xs font-medium text-gray-700 mb-1">추출된 원본 텍스트:</p>
                                  <p class="text-xs text-gray-600 whitespace-pre-wrap"><%= truncate(attachment.extracted_text, length: 500) %></p>
                                  <% if attachment.extracted_text.length > 500 %>
                                    <details class="mt-2">
                                      <summary class="text-xs text-indigo-600 hover:text-indigo-500 cursor-pointer">전체 보기</summary>
                                      <p class="mt-2 text-xs text-gray-600 whitespace-pre-wrap"><%= attachment.extracted_text %></p>
                                    </details>
                                  <% end %>
                                </div>
                              <% else %>
                                <p class="text-sm text-gray-500">AI 분석 정보가 없습니다.</p>
                              <% end %>
                              <div class="mt-4">
                                <button class="close-ai-analysis px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
                                  닫기
                                </button>
                              </div>
                            </div>
                          </div>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-gray-400">-</span>
                <% end %>
              </td>
              <td class="px-3 py-2 text-right font-medium">
                <%= number_to_currency(item.amount, unit: '₩', format: '%u%n') %>
              </td>
              <td class="px-3 py-2 text-center">
                <% if item.is_valid %>
                  <span class="text-green-600">
                    <svg class="inline h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </span>
                <% else %>
                  <span class="text-red-600">
                    <svg class="inline h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                  </span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot class="bg-gray-50">
          <tr class="font-semibold">
            <td colspan="4" class="px-3 py-2 text-right">
              합계
            </td>
            <td class="px-3 py-2 text-right">
              <%= number_to_currency(@expense_sheet.total_amount, unit: '₩', format: '%u%n') %>
            </td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>

  <!-- 첨부파일 미리보기 모달 -->
  <div id="expense-attachments-modal" class="hidden fixed top-20 left-1/2 transform -translate-x-1/2 z-50 w-full max-w-4xl">
    <div class="bg-white rounded-lg shadow-2xl border border-gray-200 max-h-[80vh] flex flex-col">
      <!-- 모달 헤더 -->
      <div class="bg-white px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900">첨부파일 미리보기</h3>
          <button type="button" onclick="closeAttachmentsModal()"
                  class="text-gray-400 hover:text-gray-500">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      
      <!-- 모달 본문 -->
      <div class="bg-white px-6 py-4 overflow-y-auto flex-1">
        <!-- 탭 네비게이션 (여러 첨부파일이 있을 때만 표시) -->
        <div id="attachment-tabs" class="border-b border-gray-200 mb-4 hidden">
          <nav class="-mb-px flex space-x-4" aria-label="Tabs">
            <!-- 탭 버튼들이 동적으로 추가됩니다 -->
          </nav>
        </div>
        
        <!-- 첨부파일 내용 영역 -->
        <div id="attachment-content">
          <!-- 첨부파일 내용이 동적으로 표시됩니다 -->
        </div>
      </div>
      
      <!-- 모달 푸터 -->
      <div class="bg-gray-50 px-6 py-3 flex justify-end border-t border-gray-200">
        <button type="button" onclick="closeAttachmentsModal()"
                class="inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
          닫기
        </button>
      </div>
    </div>
  </div>

  <!-- PDF 분석 결과 모달들 -->
  <% @pdf_analysis_results.each do |pdf_result| %>
    <div id="pdf-analysis-<%= pdf_result.id %>" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
      <div class="relative top-20 mx-auto p-5 border w-11/12 max-w-4xl shadow-lg rounded-md bg-white">
        <div class="mt-3">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">
            PDF AI 분석 결과
          </h3>
          <div class="mt-2 px-7 py-3">
            <% if pdf_result.analysis_data.present? %>
              <% begin %>
                <% analysis = JSON.parse(pdf_result.analysis_data) %>
                <div class="space-y-4">
                  <% if analysis['total_amount'] %>
                    <div class="bg-blue-50 p-4 rounded-lg">
                      <p class="text-sm font-medium text-gray-700">총 금액</p>
                      <p class="text-2xl font-bold text-blue-600">
                        <%= number_to_currency(analysis['total_amount'], unit: "₩", precision: 0) %>
                      </p>
                    </div>
                  <% end %>
                  
                  <% if analysis['transactions'] && analysis['transactions'].any? %>
                    <div>
                      <p class="text-sm font-medium text-gray-700 mb-2">거래 내역</p>
                      <div class="space-y-2">
                        <% analysis['transactions'].each do |transaction| %>
                          <div class="bg-gray-50 p-3 rounded">
                            <div class="flex justify-between items-start">
                              <div>
                                <p class="text-sm font-medium text-gray-900">
                                  <%= transaction['vendor'] || '업체명 없음' %>
                                </p>
                                <p class="text-xs text-gray-600">
                                  <%= transaction['date'] %>
                                </p>
                                <% if transaction['description'] %>
                                  <p class="text-xs text-gray-500 mt-1">
                                    <%= transaction['description'] %>
                                  </p>
                                <% end %>
                              </div>
                              <p class="text-sm font-bold text-gray-900">
                                <%= number_to_currency(transaction['amount'], unit: "₩", precision: 0) %>
                              </p>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                  
                  <% if analysis['summary'] %>
                    <div>
                      <p class="text-sm font-medium text-gray-700 mb-1">요약</p>
                      <p class="text-sm text-gray-600">
                        <%= analysis['summary'] %>
                      </p>
                    </div>
                  <% end %>
                </div>
              <% rescue JSON::ParserError %>
                <p class="text-sm text-gray-600"><%= pdf_result.analysis_data %></p>
              <% end %>
            <% else %>
              <p class="text-sm text-gray-500">AI 분석 정보가 없습니다.</p>
            <% end %>
            <div class="mt-4">
              <button class="close-pdf-analysis px-4 py-2 bg-gray-500 text-white text-base font-medium rounded-md shadow-sm hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
                닫기
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
</div>

<script>
let currentAttachmentIndex = 0;
let attachments = [];

function formatCurrency(amount) {
  if (!amount && amount !== 0) return '';
  return new Intl.NumberFormat('ko-KR', { 
    style: 'currency', 
    currency: 'KRW',
    maximumFractionDigits: 0
  }).format(amount);
}

function formatAiSummary(attachment) {
  // summaryHtml이 이미 서버에서 렌더링된 HTML이면 그대로 반환
  if (attachment.summaryHtml && attachment.summaryHtml.trim().length > 0) {
    return attachment.summaryHtml;
  }
  
  // 그렇지 않으면 클라이언트에서 포맷팅 (fallback)
  return '<div class="text-sm text-gray-500">AI 요약을 불러올 수 없습니다.</div>';
}

function showExpenseItemAttachments(itemId) {
  const attachmentContainer = document.getElementById(`expense-item-${itemId}-attachments`);
  if (!attachmentContainer) return;
  
  // 첨부파일 데이터 수집
  attachments = [];
  let index = 0;
  while (true) {
    const attachmentDiv = attachmentContainer.querySelector(`.attachment-data-${index}`);
    if (!attachmentDiv) break;
    
    const summaryContent = attachmentDiv.querySelector('.attachment-summary-content');
    attachments.push({
      id: attachmentDiv.dataset.id,
      name: attachmentDiv.dataset.name,
      size: attachmentDiv.dataset.size,
      url: attachmentDiv.dataset.url,
      downloadUrl: attachmentDiv.dataset.downloadUrl,
      summaryHtml: summaryContent ? summaryContent.innerHTML : ''
    });
    index++;
  }
  
  if (attachments.length === 0) return;
  
  // 모달 표시
  const modal = document.getElementById('expense-attachments-modal');
  modal.classList.remove('hidden');
  
  // 탭 설정 (여러 개일 때만)
  const tabsContainer = document.getElementById('attachment-tabs');
  const tabNav = tabsContainer.querySelector('nav');
  
  if (attachments.length > 1) {
    tabsContainer.classList.remove('hidden');
    tabNav.innerHTML = '';
    
    attachments.forEach((attachment, index) => {
      const tabButton = document.createElement('button');
      tabButton.className = `py-2 px-1 border-b-2 font-medium text-sm ${
        index === 0 
          ? 'border-blue-500 text-blue-600' 
          : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'
      }`;
      tabButton.textContent = attachment.name || `파일 ${index + 1}`;
      tabButton.onclick = () => showAttachment(index);
      tabNav.appendChild(tabButton);
    });
  } else {
    tabsContainer.classList.add('hidden');
  }
  
  // 첫 번째 첨부파일 표시
  showAttachment(0);
}

function showAttachment(index) {
  currentAttachmentIndex = index;
  const attachment = attachments[index];
  
  // 탭 활성화 상태 업데이트
  if (attachments.length > 1) {
    const tabs = document.querySelectorAll('#attachment-tabs nav button');
    tabs.forEach((tab, i) => {
      if (i === index) {
        tab.className = 'py-2 px-1 border-b-2 font-medium text-sm border-blue-500 text-blue-600';
      } else {
        tab.className = 'py-2 px-1 border-b-2 font-medium text-sm border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300';
      }
    });
  }
  
  // 내용 업데이트
  const contentDiv = document.getElementById('attachment-content');
  
  let contentHTML = `
    <div class="space-y-4">
      <!-- 파일 정보 및 다운로드 버튼 -->
      <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
        <div>
          <h4 class="font-medium text-gray-900">${attachment.name || '파일명 없음'}</h4>
          <p class="text-sm text-gray-500">크기: ${attachment.size || '알 수 없음'}</p>
        </div>
        <div class="flex gap-2">
          ${attachment.downloadUrl ? `
            <a href="${attachment.downloadUrl}" 
               download="${attachment.name}"
               class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              다운로드
            </a>
          ` : ''}
          ${attachment.url ? `
            <a href="${attachment.url}" 
               target="_blank"
               class="inline-flex items-center px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              새 탭에서 열기
            </a>
          ` : ''}
        </div>
      </div>
      
      <!-- AI 요약 표시 -->
      <div class="attachment-ai-summary">
        ${formatAiSummary(attachment)}
      </div>
    </div>
  `;
  
  contentDiv.innerHTML = contentHTML;
}

function closeAttachmentsModal() {
  const modal = document.getElementById('expense-attachments-modal');
  modal.classList.add('hidden');
  attachments = [];
  currentAttachmentIndex = 0;
}

// ExpenseSheetAttachment 표시 함수
function showSheetAttachment(attachmentId) {
  const dataContainer = document.getElementById(`sheet-attachment-${attachmentId}-data`);
  if (!dataContainer) return;
  
  const summaryContent = dataContainer.querySelector('.sheet-attachment-summary-content');
  const attachment = {
    id: dataContainer.dataset.id,
    name: dataContainer.dataset.name,
    size: dataContainer.dataset.size,
    url: dataContainer.dataset.url,
    downloadUrl: dataContainer.dataset.downloadUrl,
    summaryHtml: summaryContent ? summaryContent.innerHTML : ''
  };
  
  // 단일 첨부파일로 설정
  attachments = [attachment];
  
  // 모달 표시
  const modal = document.getElementById('expense-attachments-modal');
  modal.classList.remove('hidden');
  
  // 탭 숨기기 (단일 파일이므로)
  const tabsContainer = document.getElementById('attachment-tabs');
  tabsContainer.classList.add('hidden');
  
  // 첨부파일 표시
  showAttachment(0);
}

// Turbo와 호환되도록 turbo:load 이벤트 사용
function initializeEventHandlers() {
  // PDF 분석 미리보기 클릭 이벤트
  document.querySelectorAll('.pdf-analysis-preview').forEach(function(link) {
    link.addEventListener('click', function(e) {
      e.preventDefault();
      const pdfResultId = this.getAttribute('data-pdf-result-id');
      const modal = document.getElementById('pdf-analysis-' + pdfResultId);
      if (modal) {
        modal.classList.remove('hidden');
      }
    });
  });

  // 모달 닫기 버튼 이벤트 (PDF 분석)
  document.querySelectorAll('.close-pdf-analysis').forEach(function(button) {
    button.addEventListener('click', function() {
      const modal = this.closest('[id^="pdf-analysis-"]');
      if (modal) {
        modal.classList.add('hidden');
      }
    });
  });

  // 모달 배경 클릭시 닫기 (PDF 분석)
  document.querySelectorAll('[id^="pdf-analysis-"]').forEach(function(modal) {
    modal.addEventListener('click', function(e) {
      if (e.target === this) {
        this.classList.add('hidden');
      }
    });
  });

}

// ESC 키로 모달 닫기
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeAttachmentsModal();
    // 다른 모달들도 닫기
    document.querySelectorAll('[id^="pdf-analysis-"]').forEach(function(modal) {
      modal.classList.add('hidden');
    });
  }
});

// DOMContentLoaded와 turbo:load 모두에서 실행
document.addEventListener('DOMContentLoaded', initializeEventHandlers);
document.addEventListener('turbo:load', initializeEventHandlers);

// turbo:before-render 이벤트에서 기존 이벤트 리스너 제거 (중복 방지)
document.addEventListener('turbo:before-render', function() {
  // 모달들을 닫아서 화면 전환 시 깨끗한 상태로 만들기
  document.querySelectorAll('[id^="pdf-analysis-"]').forEach(function(modal) {
    modal.classList.add('hidden');
  });
  closeAttachmentsModal();
});
</script>

