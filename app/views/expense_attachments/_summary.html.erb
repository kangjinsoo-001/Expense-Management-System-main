<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
  <% if attachment.ai_processed? && attachment.parsed_summary %>
    <% summary = attachment.parsed_summary %>
    
    <div class="mb-3">
      <h4 class="text-sm font-semibold text-gray-700 mb-2">AI 요약 결과</h4>
      
      <% case attachment.receipt_type %>
      <% when 'telecom' %>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <span class="text-xs text-gray-500">유형:</span>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
              통신비 영수증
            </span>
          </div>
          
          <% if summary[:total_amount] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">전체 청구 금액:</span>
              <span class="text-sm font-semibold text-gray-900">
                <%= number_to_currency(summary[:total_amount], unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:service_charge] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">통신 서비스:</span>
              <span class="text-sm text-gray-700">
                <%= number_to_currency(summary[:service_charge], unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:additional_service_charge] && summary[:additional_service_charge] > 0 %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">부가 서비스:</span>
              <span class="text-sm text-gray-700">
                <%= number_to_currency(summary[:additional_service_charge], unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:device_installment] && summary[:device_installment] > 0 %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">기기 할부:</span>
              <span class="text-sm text-gray-700">
                <%= number_to_currency(summary[:device_installment], unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:other_charges] && summary[:other_charges] > 0 %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">기타 요금:</span>
              <span class="text-sm text-gray-700">
                <%= number_to_currency(summary[:other_charges], unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:discount_amount] && summary[:discount_amount] != 0 %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">할인 금액:</span>
              <span class="text-sm text-red-600">
                <%= number_to_currency(-summary[:discount_amount].abs, unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:billing_period] || summary[:billing_month] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">청구 기간:</span>
              <span class="text-sm text-gray-700"><%= summary[:billing_period] || summary[:billing_month] %></span>
            </div>
          <% end %>
        </div>
        
      <% when 'general' %>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <span class="text-xs text-gray-500">유형:</span>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              일반 영수증
            </span>
          </div>
          
          <% if summary[:store_name] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">상호명:</span>
              <span class="text-sm font-medium text-gray-900"><%= summary[:store_name] %></span>
            </div>
          <% end %>
          
          <% if summary[:total_amount] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">전체 금액:</span>
              <span class="text-sm font-semibold text-gray-900">
                <%= number_to_currency(summary[:total_amount], unit: "₩", precision: 0, format: "%u%n") %>
              </span>
            </div>
          <% end %>
          
          <% if summary[:date] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">거래일:</span>
              <span class="text-sm text-gray-700"><%= summary[:date] %></span>
            </div>
          <% end %>
          
          <% if summary[:location] %>
            <div class="flex items-center justify-between">
              <span class="text-xs text-gray-500">위치:</span>
              <span class="text-sm text-gray-700"><%= summary[:location] %></span>
            </div>
          <% end %>
          
          <% if summary[:items].present? && summary[:items].is_a?(Array) %>
            <div class="mt-2 pt-2 border-t border-gray-100">
              <span class="text-xs text-gray-500">주요 항목:</span>
              <ul class="mt-1 space-y-1">
                <% summary[:items].each do |item| %>
                  <li class="text-xs text-gray-600 flex justify-between">
                    <span><%= item['name'] %></span>
                    <span><%= number_to_currency(item['amount'], unit: "₩", precision: 0, format: "%u%n") if item['amount'] %></span>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
        
      <% else %>
        <div class="space-y-2">
          <div class="flex items-center justify-between">
            <span class="text-xs text-gray-500">유형:</span>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
              기타 문서
            </span>
          </div>
          
          <% if summary[:summary_text] %>
            <div class="text-sm text-gray-700">
              <%= summary[:summary_text] %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <% if attachment.extracted_text.present? %>
      <details class="mt-3 pt-3 border-t border-gray-200">
        <summary class="text-xs text-gray-500 cursor-pointer hover:text-gray-700">
          원본 텍스트 보기
        </summary>
        <div class="mt-2 p-2 bg-gray-50 rounded text-xs text-gray-600 max-h-40 overflow-y-auto">
          <%= simple_format(attachment.extracted_text.truncate(1000)) %>
        </div>
      </details>
    <% end %>
    
  <% elsif attachment.extracted_text.present? %>
    <div class="space-y-2">
      <h4 class="text-sm font-semibold text-gray-700">추출된 텍스트</h4>
      <div class="p-3 bg-gray-50 rounded text-sm text-gray-600 max-h-60 overflow-y-auto">
        <%= simple_format(attachment.extracted_text.truncate(1500)) %>
      </div>
    </div>
  <% else %>
    <div class="text-sm text-gray-500">
      아직 처리되지 않았습니다.
    </div>
  <% end %>
</div>