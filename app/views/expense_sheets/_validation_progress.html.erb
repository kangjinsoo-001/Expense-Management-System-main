<%
  # 최신 검증 이력이 있으면 표시
  has_validation = defined?(@latest_validation) && @latest_validation.present?
  display_class = has_validation ? "" : "hidden"
%>

<div id="validation_progress" class="<%= display_class %> bg-gray-50 rounded-lg p-4 mb-4">
  <h4 class="text-lg font-medium text-gray-900 mb-3">AI 검증 진행 상황</h4>
  
  <div id="validation_steps" class="space-y-2">
    <!-- 1단계: 첨부파일 검증 -->
    <div id="validation_step_1" class="flex items-center p-3 mb-2 bg-white rounded-lg border">
      <div class="flex-shrink-0 mr-3">
        <% if has_validation %>
          <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-2a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="flex-1">
        <span class="font-medium text-gray-900">1. 첨부파일 검증</span>
        <div id="validation_step_1_message" class="text-xs text-gray-600 mt-1 hidden"></div>
      </div>
      <div class="flex-shrink-0">
        <span id="validation_step_1_status" class="text-sm <%= has_validation ? 'text-green-600' : 'text-gray-500' %>">
          <%= has_validation ? '완료' : '대기중' %>
        </span>
      </div>
    </div>
    
    <!-- 2단계: 통신비 검증 -->
    <div id="validation_step_2" class="flex items-center p-3 mb-2 bg-white rounded-lg border">
      <div class="flex-shrink-0 mr-3">
        <% if has_validation %>
          <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-2a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="flex-1">
        <span class="font-medium text-gray-900">2. 통신비 검증</span>
        <div id="validation_step_2_message" class="text-xs text-gray-600 mt-1 hidden"></div>
      </div>
      <div class="flex-shrink-0">
        <span id="validation_step_2_status" class="text-sm <%= has_validation ? 'text-green-600' : 'text-gray-500' %>">
          <%= has_validation ? '완료' : '대기중' %>
        </span>
      </div>
    </div>
    
    <!-- 3단계: 항목 순서/금액 검증 -->
    <div id="validation_step_3" class="flex items-center p-3 mb-2 bg-white rounded-lg border">
      <div class="flex-shrink-0 mr-3">
        <% if has_validation %>
          <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-2a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="flex-1">
        <span class="font-medium text-gray-900">3. 항목 순서/금액 검증</span>
        <div id="validation_step_3_message" class="text-xs text-gray-600 mt-1 hidden"></div>
      </div>
      <div class="flex-shrink-0">
        <span id="validation_step_3_status" class="text-sm <%= has_validation ? 'text-green-600' : 'text-gray-500' %>">
          <%= has_validation ? '완료' : '대기중' %>
        </span>
      </div>
    </div>
    
    <!-- 4단계: 영수증 첨부 확인 -->
    <div id="validation_step_4" class="flex items-center p-3 mb-2 bg-white rounded-lg border">
      <div class="flex-shrink-0 mr-3">
        <% if has_validation %>
          <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm0-2a6 6 0 100-12 6 6 0 000 12z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <div class="flex-1">
        <span class="font-medium text-gray-900">4. 영수증 첨부 확인</span>
        <div id="validation_step_4_message" class="text-xs text-gray-600 mt-1 hidden"></div>
      </div>
      <div class="flex-shrink-0">
        <span id="validation_step_4_status" class="text-sm <%= has_validation ? 'text-green-600' : 'text-gray-500' %>">
          <%= has_validation ? '완료' : '대기중' %>
        </span>
      </div>
    </div>
  </div>
  
  <div id="validation_summary" class="mt-4 hidden">
    <div class="p-3 bg-white rounded-lg border">
      <p class="text-sm text-gray-600">검증 완료 - 결과를 확인하세요.</p>
    </div>
  </div>
</div>