<!-- 상단 도구 모음 -->
<div class="tremor-card px-6 py-4 mb-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <!-- 왼쪽: 필터 (정렬 버튼) -->
    <div class="flex items-center">
      <% if expense_sheet.editable? && expense_items.any? %>
        <%= render 'sort_buttons', expense_sheet: expense_sheet %>
      <% end %>
    </div>
    
    <!-- 오른쪽: 엑셀 다운로드 -->
    <div>
      <%= link_to export_expense_sheet_path(expense_sheet, format: :xlsx),
                  class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
        <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        엑셀 다운로드
      <% end %>
    </div>
  </div>
</div>