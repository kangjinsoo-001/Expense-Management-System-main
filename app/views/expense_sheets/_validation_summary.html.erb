<%# 경비 시트 검증 요약 %>
<div id="expense_sheet_validation_summary" class="validation-summary">
  <% summary = expense_sheet.validation_summary %>
  
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
    <h3 class="text-sm font-medium text-gray-900 mb-3">검증 상태</h3>
    
    <div class="grid grid-cols-2 sm:grid-cols-5 gap-3">
      <div class="text-center">
        <div class="text-2xl font-bold text-gray-900"><%= summary[:total] %></div>
        <div class="text-xs text-gray-500">전체</div>
      </div>
      
      <div class="text-center">
        <div class="text-2xl font-bold text-green-600"><%= summary[:validated] %></div>
        <div class="text-xs text-gray-500">검증 완료</div>
      </div>
      
      <div class="text-center">
        <div class="text-2xl font-bold text-yellow-600"><%= summary[:warning] %></div>
        <div class="text-xs text-gray-500">주의</div>
      </div>
      
      <div class="text-center">
        <div class="text-2xl font-bold text-red-600"><%= summary[:failed] %></div>
        <div class="text-xs text-gray-500">실패</div>
      </div>
      
      <div class="text-center">
        <div class="text-2xl font-bold text-gray-400"><%= summary[:pending] %></div>
        <div class="text-xs text-gray-500">대기중</div>
      </div>
    </div>
    
    <% if summary[:total] > 0 %>
      <div class="mt-3">
        <div class="w-full bg-gray-200 rounded-full h-2">
          <div class="flex h-2 rounded-full overflow-hidden">
            <% if summary[:validated] > 0 %>
              <div class="bg-green-500" style="width: <%= (summary[:validated].to_f / summary[:total] * 100).round %>%"></div>
            <% end %>
            <% if summary[:warning] > 0 %>
              <div class="bg-yellow-500" style="width: <%= (summary[:warning].to_f / summary[:total] * 100).round %>%"></div>
            <% end %>
            <% if summary[:failed] > 0 %>
              <div class="bg-red-500" style="width: <%= (summary[:failed].to_f / summary[:total] * 100).round %>%"></div>
            <% end %>
            <% if summary[:pending] > 0 %>
              <div class="bg-gray-400" style="width: <%= (summary[:pending].to_f / summary[:total] * 100).round %>%"></div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    
    <% if expense_sheet.all_items_validated? %>
      <div class="mt-3 p-2 bg-green-50 border border-green-200 rounded">
        <div class="flex items-center gap-2">
          <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm text-green-800">모든 항목이 검증되었습니다</span>
        </div>
      </div>
    <% elsif summary[:failed] > 0 %>
      <div class="mt-3 p-2 bg-red-50 border border-red-200 rounded">
        <div class="flex items-center gap-2">
          <svg class="h-4 w-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm text-red-800">검증 실패 항목을 수정해주세요</span>
        </div>
      </div>
    <% elsif summary[:warning] > 0 %>
      <div class="mt-3 p-2 bg-yellow-50 border border-yellow-200 rounded">
        <div class="flex items-center gap-2">
          <svg class="h-4 w-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <span class="text-sm text-yellow-800">주의가 필요한 항목이 있습니다</span>
        </div>
      </div>
    <% end %>
    
    <% if expense_sheet.needs_validation? %>
      <div class="mt-3">
        <%= button_to "전체 검증 실행",
                      validate_sheet_expense_sheet_path(expense_sheet),
                      method: :post,
                      class: "w-full px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded hover:bg-blue-700",
                      data: { turbo_confirm: "모든 항목을 검증하시겠습니까?" } %>
      </div>
    <% end %>
  </div>
</div>