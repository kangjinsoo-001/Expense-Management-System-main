<div class="container mx-auto px-4 py-8">
  <div class="max-w-7xl mx-auto">
    <!-- 헤더 -->
    <div class="mb-6">
      <div class="flex justify-between items-start">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <%= @expense_sheet.year %>년 <%= @expense_sheet.month %>월 경비 시트
          </h1>
          <p class="mt-1 text-sm text-gray-500">
            <%= @expense_sheet.user.name %> (<%= @expense_sheet.user.employee_id %>)
            | <%= @expense_sheet.user.organization&.name %>
          </p>
        </div>
        <div class="flex space-x-2">
          <% if @expense_sheet.editable? %>
            <%= link_to "수정", edit_expense_sheet_path(@expense_sheet), 
                        class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
          <% end %>
          <%= link_to "목록", expense_sheets_path, 
                      class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300" %>
        </div>
      </div>
    </div>

    <!-- 상태 정보 -->
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">상태</dt>
          <dd class="mt-1">
            <span class="px-2 py-1 text-xs font-semibold rounded-full 
                       <%= case @expense_sheet.status
                          when 'draft' then 'bg-yellow-100 text-yellow-800'
                          when 'submitted' then 'bg-blue-100 text-blue-800'
                          when 'approval_in_progress' then 'bg-indigo-100 text-indigo-800'
                          when 'approved' then 'bg-green-100 text-green-800'
                          when 'rejected' then 'bg-red-100 text-red-800'
                          when 'closed' then 'bg-purple-100 text-purple-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
              <%= t("expense_sheet.status.#{@expense_sheet.status}") %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">총 금액</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">
            <%= number_to_currency(@expense_sheet.total_amount, unit: "₩", precision: 0, format: "%u%n") %>
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">항목 수</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">
            <%= @expense_sheet.expense_items_count %>건
          </dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">제출일</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= @expense_sheet.submitted_at ? l(@expense_sheet.submitted_at, format: :long) : '-' %>
          </dd>
        </div>
      </div>
    </div>

    <!-- AI 검증 결과 -->
    <% if @expense_sheet.validation_result.present? %>
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">AI 검증 결과</h2>
        
        <% validation_result = @expense_sheet.validation_result %>
        <% if validation_result['all_valid'] %>
          <div class="bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-green-800">
                  <%= validation_result['validation_summary'] %>
                </p>
              </div>
            </div>
          </div>
        <% else %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-red-800">
                  <%= validation_result['validation_summary'] %>
                </p>
                <% if validation_result['issues_found'].present? %>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% validation_result['issues_found'].each do |issue| %>
                      <li><%= issue %></li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
        
        <% if validation_result['validated_at'].present? %>
          <p class="mt-2 text-xs text-gray-500">
            검증일시: <%= Time.parse(validation_result['validated_at']).strftime('%Y-%m-%d %H:%M:%S') %>
          </p>
        <% end %>
      </div>
    <% end %>

    <!-- 승인 정보 -->
    <% if @approval_line.present? %>
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">승인 진행 상황</h2>
        
        <div class="space-y-4">
          <% @approvals.each_with_index do |approval, index| %>
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <% if approval.approved? %>
                  <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% elsif approval.rejected? %>
                  <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </div>
                <% else %>
                  <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                    <span class="text-gray-600 text-sm"><%= index + 1 %></span>
                  </div>
                <% end %>
              </div>
              <div class="ml-4 flex-1">
                <p class="text-sm font-medium text-gray-900">
                  <%= approval.approver.name %>
                  <span class="text-gray-500">(<%= approval.approver.position || approval.approver.role %>)</span>
                </p>
                <% if approval.approved_at.present? %>
                  <p class="text-xs text-gray-500">
                    <%= approval.approved? ? '승인' : '반려' %>: <%= l(approval.approved_at, format: :long) %>
                  </p>
                  <% if approval.comment.present? %>
                    <p class="text-sm text-gray-600 mt-1"><%= approval.comment %></p>
                  <% end %>
                <% else %>
                  <p class="text-xs text-gray-500">승인 대기중</p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- 경비 항목 목록 -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900">경비 항목</h2>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">순번</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">사용일</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">경비 코드</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">적요</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">금액</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">첨부</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @expense_items.each_with_index do |item, index| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= index + 1 %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= l(item.use_date, format: :default) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= item.expense_code&.name %>
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                  <%= item.description %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                  <%= number_to_currency(item.amount, unit: "₩", precision: 0, format: "%u%n") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-center">
                  <% if item.file.attached? %>
                    <span class="text-green-600">✓</span>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="4" class="px-6 py-4 text-right font-semibold text-gray-900">합계</td>
              <td class="px-6 py-4 text-right font-semibold text-gray-900">
                <%= number_to_currency(@expense_sheet.total_amount, unit: "₩", precision: 0, format: "%u%n") %>
              </td>
              <td></td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>