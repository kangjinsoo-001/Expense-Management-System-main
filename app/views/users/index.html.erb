<% content_for :title, "사용자 관리" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <!-- 헤더 영역 -->
  <div class="mb-8">
    <div class="md:flex md:items-center md:justify-between">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-semibold text-gray-900">사용자 관리</h1>
        <p class="mt-1 text-sm text-gray-500">시스템에 등록된 모든 사용자를 관리합니다</p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to new_user_path, 
                    class: "tremor-button-primary" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          새 사용자
        <% end %>
      </div>
    </div>
  </div>

  <!-- 데스크톱 테이블 뷰 -->
  <div class="hidden md:block">
    <div class="tremor-card">
      <div class="overflow-x-auto">
        <table class="tremor-table">
          <thead>
            <tr>
              <th class="text-left">이름</th>
              <th class="text-left">이메일</th>
              <th class="text-left">사번</th>
              <th class="text-left">소속</th>
              <th class="text-left">역할</th>
              <th class="text-left">상태</th>
              <th class="text-center w-24">작업</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="font-medium">
                  <%= user.name %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.employee_id || "-" %>
                </td>
                <td>
                  <% if user.organization %>
                    <div class="flex items-center gap-2">
                      <%= link_to user.organization.name, organization_path(user.organization), 
                                  class: "text-blue-600 hover:text-blue-700 font-medium" %>
                      <% if user == user.organization.manager %>
                        <span class="tremor-badge tremor-badge-yellow tremor-badge">
                          조직장
                        </span>
                      <% end %>
                    </div>
                  <% else %>
                    <span class="text-gray-500">-</span>
                  <% end %>
                </td>
                <td>
                  <% role_badges = {
                    'admin' => 'tremor-badge-error',
                    'manager' => 'tremor-badge-blue',
                    'finance' => 'tremor-badge-purple',
                    'employee' => 'tremor-badge-gray'
                  } %>
                  <span class="<%= role_badges[user.role] || 'tremor-badge-gray' %> tremor-badge">
                    <%= t("user.role.#{user.role}") %>
                  </span>
                </td>
                <td>
                  <span class="tremor-badge-success tremor-badge">
                    활성
                  </span>
                </td>
                <td class="text-center">
                  <div class="flex items-center justify-center gap-1">
                    <%= link_to user_path(user), 
                                class: "p-1.5 rounded hover:bg-gray-100 transition-colors group",
                                title: "보기" do %>
                      <svg class="h-4 w-4 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    <%= link_to edit_user_path(user), 
                                class: "p-1.5 rounded hover:bg-gray-100 transition-colors group",
                                title: "편집" do %>
                      <svg class="h-4 w-4 text-gray-500 group-hover:text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    <%= button_to user_path(user), 
                                  method: :delete,
                                  data: { 
                                    confirm: "정말 삭제하시겠습니까?",
                                    turbo_confirm: "정말 삭제하시겠습니까?"
                                  },
                                  class: "p-1.5 rounded hover:bg-red-50 transition-colors group",
                                  title: "삭제" do %>
                      <svg class="h-4 w-4 text-gray-500 group-hover:text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    
    <% if @users.empty? %>
      <div class="tremor-card mt-4">
        <div class="text-center py-16">
          <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gray-100">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">사용자가 없습니다</h3>
          <p class="mt-2 text-sm text-gray-500">첫 사용자를 등록해보세요</p>
          <div class="mt-8">
            <%= link_to new_user_path, 
                        class: "tremor-button-primary" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              첫 사용자 등록하기
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- 모바일 카드 뷰 -->
  <div class="md:hidden space-y-4">
    <% @users.each do |user| %>
      <div class="tremor-card p-4">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h3 class="text-lg font-medium text-gray-900">
              <%= user.name %>
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              <%= user.email %>
            </p>
          </div>
          <% role_badges = {
            'admin' => 'tremor-badge-error',
            'manager' => 'tremor-badge-blue',
            'finance' => 'tremor-badge-purple',
            'employee' => 'tremor-badge-gray'
          } %>
          <span class="<%= role_badges[user.role] || 'tremor-badge-gray' %> tremor-badge">
            <%= t("user.role.#{user.role}") %>
          </span>
        </div>
        
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <p class="tremor-metric-label">사번</p>
            <p class="text-sm font-medium text-gray-900"><%= user.employee_id || "-" %></p>
          </div>
          <div>
            <p class="tremor-metric-label">소속</p>
            <p class="text-sm font-medium text-gray-900">
              <% if user.organization %>
                <%= user.organization.name %>
                <% if user == user.organization.manager %>
                  <span class="ml-1 tremor-badge tremor-badge-yellow tremor-badge text-xs">조직장</span>
                <% end %>
              <% else %>
                -
              <% end %>
            </p>
          </div>
        </div>
        
        <div class="flex gap-3">
          <%= link_to user_path(user), 
                      class: "tremor-button-secondary flex-1 justify-center text-sm" do %>
            보기
          <% end %>
          <%= link_to edit_user_path(user), 
                      class: "tremor-button-primary flex-1 justify-center text-sm" do %>
            편집
          <% end %>
        </div>
      </div>
    <% end %>
    
    <% if @users.empty? %>
      <div class="tremor-card">
        <div class="text-center py-12">
          <div class="mx-auto h-16 w-16 flex items-center justify-center rounded-full bg-gray-100">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900">사용자가 없습니다</h3>
          <p class="mt-2 text-sm text-gray-500">첫 사용자를 등록해보세요</p>
          <div class="mt-6">
            <%= link_to new_user_path, 
                        class: "tremor-button-primary" do %>
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              첫 사용자 등록하기
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>