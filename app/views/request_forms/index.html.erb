<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">내 신청서</h1>
      <p class="mt-2 text-lg text-gray-600">작성한 신청서 목록입니다.</p>
    </div>
    
    <%= link_to "새 신청서 작성", select_category_request_forms_path, 
        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
  </div>

  <% if @request_forms.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              제목
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              카테고리/템플릿
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              상태
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              작성일
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">작업</span>
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @request_forms.each do |form| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= link_to form.title, request_form_path(form), 
                      class: "hover:text-indigo-600" %>
                </div>
                <div class="text-sm text-gray-500">
                  <%= form.request_number %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900"><%= form.request_category.name %></div>
                <div class="text-sm text-gray-500"><%= form.request_template.name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                           <%= case form.status
                               when 'draft' then 'bg-gray-100 text-gray-800'
                               when 'submitted' then 'bg-blue-100 text-blue-800'
                               when 'pending' then 'bg-yellow-100 text-yellow-800'
                               when 'approved' then 'bg-green-100 text-green-800'
                               when 'rejected' then 'bg-red-100 text-red-800'
                               when 'cancelled' then 'bg-gray-100 text-gray-800'
                               else 'bg-gray-100 text-gray-800'
                               end %>">
                  <%= form.status_name %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= form.created_at.strftime("%Y-%m-%d") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <div class="flex justify-end space-x-2">
                  <%= link_to "보기", request_form_path(form), 
                      class: "text-indigo-600 hover:text-indigo-900" %>
                  <% if form.draft? %>
                    <%= link_to "수정", edit_request_form_path(form), 
                        class: "text-indigo-600 hover:text-indigo-900" %>
                    <%= button_to "삭제", request_form_path(form), 
                        method: :delete,
                        form: { data: { turbo_confirm: "정말 삭제하시겠습니까?" } },
                        class: "text-red-600 hover:text-red-900" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="mt-6">
      <%= paginate @request_forms %>
    </div>
  <% else %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">작성한 신청서가 없습니다</h3>
          <p class="mt-1 text-sm text-gray-500">새 신청서를 작성해보세요.</p>
          <div class="mt-6">
            <%= link_to "신청서 작성하기", select_category_request_forms_path, 
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>