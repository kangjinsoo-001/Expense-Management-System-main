<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <nav class="flex mb-8" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to select_category_request_forms_path, class: "inline-flex items-center text-gray-700 hover:text-indigo-600" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          카테고리 선택
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <%= link_to @template.request_category.name, 
              select_template_request_forms_path(category_id: @template.request_category_id),
              class: "ml-1 text-gray-700 hover:text-indigo-600 md:ml-2" %>
        </div>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-1 text-gray-500 md:ml-2"><%= @template.name %></span>
        </div>
      </li>
    </ol>
  </nav>

  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">신청서 작성</h1>
    <p class="mt-2 text-lg text-gray-600"><%= @template.name %></p>
    <% if @template.description.present? %>
      <p class="mt-1 text-gray-500"><%= @template.description %></p>
    <% end %>
  </div>

  <%= render 'form', request_form: @request_form %>
</div>