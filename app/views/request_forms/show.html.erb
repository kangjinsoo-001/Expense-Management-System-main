<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-8 flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @request_form.title %></h1>
      <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
        <span><%= @request_form.request_category.name %> / <%= @request_form.request_template.name %></span>
        <span>•</span>
        <span><%= @request_form.created_at.strftime("%Y-%m-%d %H:%M") %></span>
        <span>•</span>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                     <%= case @request_form.status
                         when 'draft' then 'bg-gray-100 text-gray-800'
                         when 'submitted' then 'bg-blue-100 text-blue-800'
                         when 'pending' then 'bg-yellow-100 text-yellow-800'
                         when 'approved' then 'bg-green-100 text-green-800'
                         when 'rejected' then 'bg-red-100 text-red-800'
                         when 'cancelled' then 'bg-gray-100 text-gray-800'
                         else 'bg-gray-100 text-gray-800'
                         end %>">
          <%= @request_form.status_name %>
        </span>
      </div>
    </div>
    
    <div class="flex space-x-2">
      <% if @request_form.draft? %>
        <%= link_to "수정", edit_request_form_path(@request_form), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "제출", "#", 
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700",
            "data-turbo-method": "get",
            "data-turbo-action": "replace" %>
      <% end %>
      
      <% if @request_form.has_pending_approval? %>
        <%= button_to "제출 취소", cancel_approval_request_form_path(@request_form), 
            method: :patch,
            data: { 
              turbo_confirm: "제출을 취소하시겠습니까? 신청서는 임시저장 상태로 돌아갑니다.",
              turbo_method: :patch
            },
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yellow-600 hover:bg-yellow-700" %>
      <% elsif @request_form.status != 'approved' %>
        <%= button_to "삭제", request_form_path(@request_form), 
            method: :delete,
            form: { data: { turbo_confirm: "정말 삭제하시겠습니까?" } },
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
      <% end %>
    </div>
  </div>

  <!-- 기본 정보 -->
  <div class="bg-white shadow sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:p-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">기본 정보</h3>
      <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
        <div>
          <dt class="text-sm font-medium text-gray-500">작성자</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @request_form.user.name %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500">작성일</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @request_form.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- 템플릿 필드 정보 -->
  <% if @request_form.form_data.present? %>
    <div class="bg-white shadow sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">신청 내역</h3>
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <% @request_form.form_data.each do |key, value| %>
            <% next if value.blank? %>
            <% next if key == 'attachment' %> <!-- 첨부파일 필드는 별도 섹션에서 처리 -->
            <div class="<%= value.to_s.length > 100 ? 'sm:col-span-2' : '' %>">
              <dt class="text-sm font-medium text-gray-500">
                <%= @request_form.field_label(key) %>
              </dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if value.to_s.length > 100 %>
                  <div class="whitespace-pre-wrap"><%= value %></div>
                <% else %>
                  <%= value %>
                <% end %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  <% end %>

  <!-- 첨부파일 -->
  <% if @attachments.any? %>
    <div class="bg-white shadow sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">첨부파일</h3>
        <ul class="divide-y divide-gray-200">
          <% @attachments.each do |attachment| %>
            <li class="py-3 flex items-center justify-between">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path>
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= attachment.file.filename %></p>
                  <p class="text-sm text-gray-500">
                    <%= number_to_human_size(attachment.file.byte_size) %> • 
                    <%= attachment.uploaded_by.name %> • 
                    <%= attachment.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </p>
                </div>
              </div>
              <%= link_to "다운로드", rails_blob_path(attachment.file, disposition: "attachment"), 
                  class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <!-- 승인 진행 상황 -->
  <% if @approval_line %>
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">승인 진행 상황</h3>
        
        <ol class="relative border-l border-gray-200">
          <% @approval_line.approval_line_steps.order(:step_order).each do |step| %>
            <% approval = nil # TODO: RequestForm의 승인 시스템 통합 후 수정 필요 %>
            <li class="mb-10 ml-6">
              <span class="flex absolute -left-3 justify-center items-center w-6 h-6 rounded-full ring-8 ring-white
                         <%= if approval
                               case approval.status
                               when 'approved' then 'bg-green-500'
                               when 'rejected' then 'bg-red-500'
                               when 'pending' then 'bg-yellow-400'
                               else 'bg-gray-300'
                               end
                             else
                               'bg-gray-300'
                             end %>">
                <% if approval&.status == 'approved' %>
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                <% elsif approval&.status == 'rejected' %>
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                  </svg>
                <% end %>
              </span>
              <div class="ml-4">
                <h4 class="text-base font-semibold text-gray-900">
                  <%= "#{step.step_order}단계" %>
                </h4>
                <p class="text-sm text-gray-600">
                  <%= step.approver.name %>
                  <% if step.approver.approver_groups.any? %>
                    <% highest_group = step.approver.approver_groups.max_by(&:priority) %>
                    (<%= highest_group.name %>)
                  <% elsif step.approver.position.present? %>
                    (<%= step.approver.position %>)
                  <% end %>
                </p>
                <% if approval %>
                  <p class="text-sm text-gray-500 mt-1">
                    <%= approval.approved_at&.strftime("%Y-%m-%d %H:%M") || "대기 중" %>
                  </p>
                  <% if approval.comments.present? %>
                    <p class="text-sm text-gray-700 mt-2 p-2 bg-gray-50 rounded">
                      <%= approval.comments %>
                    </p>
                  <% end %>
                <% end %>
              </div>
            </li>
          <% end %>
        </ol>
      </div>
    </div>
  <% end %>
</div>