<%= turbo_frame_tag dom_id(request) do %>
<div class="bg-white rounded-lg shadow p-4 mb-4">
  <!-- 헤더: 신청일과 상태 -->
  <div class="flex items-start justify-between mb-3">
    <div>
      <p class="text-xs text-gray-500">신청일</p>
      <p class="text-sm font-medium text-gray-900"><%= request.created_at.strftime('%Y-%m-%d') %></p>
    </div>
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
      <%= hero_icon('clock', size: 'w-3 h-3', css_class: 'mr-1') %>
      <%= request.current_status_display %>
    </span>
  </div>
  
  <!-- 신청자 정보 -->
  <div class="mb-3">
    <p class="text-xs text-gray-500">신청자</p>
    <p class="text-sm font-medium text-gray-900"><%= request.expense_item.expense_sheet.user.name %></p>
  </div>
  
  <!-- 경비 정보 -->
  <div class="mb-3">
    <p class="text-xs text-gray-500">경비 정보</p>
    <p class="text-sm font-medium text-gray-900"><%= request.expense_item.expense_code.name %></p>
    <p class="text-xs text-gray-500 mt-1"><%= request.expense_item.display_description %></p>
  </div>
  
  <!-- 금액 -->
  <div class="mb-4">
    <p class="text-xs text-gray-500">금액</p>
    <p class="text-lg font-bold text-gray-900"><%= request.expense_item.formatted_amount %></p>
  </div>
  
  <!-- 작업 버튼 -->
  <%= link_to approval_path(request), 
      class: 'w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500',
      data: { turbo_frame: "_top" } do %>
    <%= hero_icon('eye', size: 'w-4 h-4', css_class: 'mr-2') %>
    상세보기 및 승인
  <% end %>
</div>
<% end %>