<!-- 승인 요청 목록 카드 (모바일) -->
<div class="bg-white shadow rounded-lg p-4">
  <div class="flex <%= show_checkbox ? 'items-start gap-3' : 'justify-between items-start' %>">
    <% if show_checkbox %>
      <input type="checkbox" 
             data-batch-approval-target="checkbox"
             data-action="change->batch-approval#updateButtonState"
             data-approval-id="<%= request.id %>"
             class="mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
    <% end %>
    
    <div class="flex-1">
      <div class="flex justify-between items-start mb-2">
        <div>
          <p class="text-sm font-medium text-gray-900">
            <%= approval_type_badge(request.approvable) %>
            <%= presenter.title %>
          </p>
          <p class="text-xs text-gray-500"><%= presenter.description %></p>
        </div>
        <%= approval_status_badge(request.status) %>
      </div>
      
      <div class="space-y-1 text-xs text-gray-600">
        <p>신청자: <%= presenter.owner_name %></p>
        <p>신청일: <%= request.created_at.strftime('%Y-%m-%d %H:%M') %></p>
        <% if presenter.amount %>
          <p>금액: <span class="font-medium text-gray-900"><%= presenter.formatted_amount %></span></p>
        <% end %>
        <% if request.status == 'pending' && request.current_approver %>
          <p>현재 승인자: <%= request.current_approver.name %> (대기)</p>
        <% end %>
      </div>
      
      <div class="mt-3">
        <%= link_to '상세보기', approval_path(request), 
            class: 'text-sm text-blue-600 hover:text-blue-900' %>
      </div>
    </div>
  </div>
</div>