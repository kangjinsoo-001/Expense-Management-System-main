<% presenter = approval_presenter(@approvable) %>

<div class="container mx-auto px-4 py-8" data-controller="approval-detail">
  <div class="flex justify-between items-center mb-6">
    <div class="flex items-center space-x-3">
      <h1 class="text-3xl font-bold text-gray-900">승인 상세</h1>
      <%= approval_type_badge(@approvable) %>
    </div>
    <%= link_to approvals_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900" do %>
      <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      목록으로
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 lg:gap-6">
    <!-- 승인 대상 정보 -->
    <div class="lg:col-span-2">
      <!-- 타입별 상세 정보 렌더링 -->
      <%= render_approval_detail(@approvable) %>
      
      <!-- 첨부파일 섹션 -->
      <%= render_approval_attachments(@approvable) %>
      
      <!-- 첨부파일이 없는 경우 -->
      <% unless presenter&.has_attachments? %>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <p class="mt-2 text-sm text-gray-500">첨부파일이 없습니다</p>
          </div>
        </div>
      <% end %>
      
      <!-- 결재 진행 프로그레스 바 -->
      <%= render 'shared/approval_progress_bar', approval_request: @approval_request %>
      
      <!-- 결재 진행 타임라인 -->
      <% if @approvable.is_a?(ExpenseItem) %>
        <%= render 'expense_items/approval_timeline', expense_item: @approvable %>
      <% elsif @approvable.is_a?(ExpenseSheet) %>
        <%= render 'expense_sheets/approval_timeline', expense_sheet: @approvable, approval_request: @approval_request %>
      <% else %>
        <!-- 다른 타입용 타임라인이 필요한 경우 여기에 추가 -->
      <% end %>
      
      <!-- 승인 이력 -->
      <% if @approval_histories.any? %>
        <% if @approvable.is_a?(ExpenseItem) %>
          <%= render 'expense_items/approval_history', expense_item: @approvable %>
        <% else %>
          <!-- 다른 타입용 승인 이력이 필요한 경우 여기에 추가 -->
        <% end %>
      <% end %>
    </div>
    
    <!-- 결재선 정보 및 액션 -->
    <div class="lg:col-span-1">
      <!-- 결재선 정보 -->
      <div class="bg-white shadow rounded-lg p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">
          결재선 정보
          <% if @approvable.respond_to?(:needs_reapproval?) && @approvable.needs_reapproval? %>
            <span class="ml-2 px-2 py-1 bg-orange-100 text-orange-700 text-xs rounded-full">재승인 필요</span>
          <% end %>
        </h2>
        
        <% if @approvable.respond_to?(:needs_reapproval?) && @approvable.needs_reapproval? %>
          <div class="mb-4 p-3 bg-orange-50 border border-orange-200 rounded-lg">
            <p class="text-xs text-orange-800">
              예산 초과로 재승인이 진행 중입니다.
              <br>초과: <%= number_to_currency(@approvable.actual_amount - @approvable.budget_amount, unit: "₩", format: "%u%n") %>
            </p>
          </div>
        <% end %>
        
        <div class="mb-4">
          <div class="space-y-3">
            <% @approval_request.approval_line.approval_line_steps.ordered.each do |step| %>
              <% history = @approval_request.approval_histories.where(step_order: step.step_order).last %>
              <% needs_reapproval = @approvable.respond_to?(:needs_reapproval?) && @approvable.needs_reapproval? %>
              
              <% if needs_reapproval && history&.action == 'approve' %>
                <div class="flex items-center justify-between p-3 rounded-lg bg-gray-100 opacity-75">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <span class="h-8 w-8 rounded-full bg-gray-400 flex items-center justify-center">
                        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                      </span>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-gray-700">
                        <%= step.approver.name %>
                      </p>
                      <p class="text-xs text-gray-500">
                        예산 승인 완료
                        <% if history %>
                          • <%= history.approved_at.strftime('%m/%d %H:%M') %>
                        <% end %>
                      </p>
                    </div>
                  </div>
                </div>
              <% else %>
                <div class="flex items-center justify-between p-3 rounded-lg
                  <%= @approval_request.current_step == step.step_order && @approval_request.status == 'pending' ? 'bg-blue-50 border border-blue-200' : 'bg-gray-50' %>">
                  <div class="flex items-center">
                    <div class="flex-shrink-0">
                      <% if !needs_reapproval && history&.action == 'approve' %>
                        <span class="h-8 w-8 rounded-full bg-green-500 flex items-center justify-center">
                          <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                        </span>
                      <% elsif history&.action == 'reject' %>
                        <span class="h-8 w-8 rounded-full bg-red-500 flex items-center justify-center">
                          <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                          </svg>
                        </span>
                      <% elsif @approval_request.current_step == step.step_order && @approval_request.status == 'pending' %>
                        <span class="h-8 w-8 rounded-full bg-blue-500 flex items-center justify-center animate-pulse">
                          <span class="text-white text-sm font-medium"><%= step.step_order %></span>
                        </span>
                      <% else %>
                        <span class="h-8 w-8 rounded-full bg-gray-300 flex items-center justify-center">
                          <span class="text-gray-600 text-sm font-medium"><%= step.step_order %></span>
                        </span>
                      <% end %>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-gray-900">
                        <%= step.approver.name %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= step.role == 'approve' ? '승인' : '참조' %>
                        <% if needs_reapproval && @approval_request.current_step == step.step_order && @approval_request.status == 'pending' %>
                          • <span class="text-orange-600">재승인 대기</span>
                        <% end %>
                        <% same_step_approvers = @approval_request.approval_line.approval_line_steps.where(step_order: step.step_order, role: 'approve') %>
                        <% if same_step_approvers.count > 1 && step.approval_type.present? %>
                          • <%= step.approval_type == 'all_required' ? '전체 승인 필요' : '단일 승인 가능' %>
                        <% end %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        
        <div class="border-t pt-4">
          <dl class="text-sm">
            <dt class="font-medium text-gray-500">현재 상태</dt>
            <dd class="mt-1">
              <%= approval_status_badge(@approval_request.status) %>
            </dd>
          </dl>
        </div>
      </div>
      
      <!-- 승인/반려 액션 -->
      <% if @can_approve %>
        <div class="bg-white shadow rounded-lg p-6" data-controller="approval-form">
          <h2 class="text-lg font-semibold text-gray-900 mb-4">승인 처리</h2>
          
          <div class="space-y-4">
            <div>
              <label for="comment" class="block text-sm font-medium text-gray-700">
                의견 (선택사항)
              </label>
              <textarea id="comment" name="comment" rows="3"
                data-approval-form-target="comment"
                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                placeholder="승인/반려 의견을 입력하세요..."></textarea>
            </div>
            
            <div class="flex flex-col sm:flex-row gap-3">
              <%= button_to approve_approval_path(@approval_request), 
                  method: :post,
                  params: { comment: '' },
                  form: { 
                    id: 'approve-form', 
                    data: { 
                      approval_form_target: "approveForm",
                      action: "submit->approval-form#submitApproval"
                    } 
                  },
                  class: "w-full sm:flex-1 inline-flex justify-center items-center px-4 py-3 sm:py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                승인
              <% end %>
              
              <%= button_to reject_approval_path(@approval_request),
                  method: :post,
                  params: { comment: '' },
                  form: { 
                    id: 'reject-form', 
                    data: { 
                      approval_form_target: "rejectForm",
                      action: "submit->approval-form#submitRejection"
                    } 
                  },
                  class: "w-full sm:flex-1 inline-flex justify-center items-center px-4 py-3 sm:py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
                <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                반려
              <% end %>
            </div>
          </div>
        </div>
      <% elsif @can_view %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <p class="text-sm text-blue-800">
            <svg class="inline h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            참조자로 지정되어 열람 중입니다.
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function showAttachmentDetail(attachmentId) {
  const detailContent = document.getElementById(`attachment-detail-${attachmentId}`).innerHTML;
  
  // 모달 생성
  const modal = document.createElement('div');
  modal.id = 'attachment-detail-modal';
  modal.className = 'fixed inset-0 z-50 overflow-y-auto';
  modal.innerHTML = `
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
    <div class="flex min-h-full items-center justify-center p-4">
      <div class="relative transform overflow-hidden rounded-lg bg-white shadow-xl transition-all sm:max-w-4xl sm:w-full">
        <div class="bg-white px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">첨부파일 상세 내용</h3>
            <button type="button" onclick="closeModal()"
                    class="text-gray-400 hover:text-gray-500">
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        <div class="bg-white px-6 py-4 max-h-[32rem] overflow-y-auto">
          ${detailContent}
        </div>
        <div class="bg-gray-50 px-6 py-3 flex justify-end">
          <button type="button" onclick="closeModal()"
                  class="inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
            닫기
          </button>
        </div>
      </div>
    </div>
  `;
  
  document.body.appendChild(modal);
}

function closeModal() {
  const modal = document.getElementById('attachment-detail-modal');
  if (modal) {
    modal.remove();
  }
}

// ESC 키로 모달 닫기
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape') {
    closeModal();
  }
});
</script>