<%= form_with(model: organization) do |form| %>
  <% if organization.errors.any? %>
    <div class="tremor-card mb-6 border-red-200 bg-red-50">
      <div class="p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= organization.errors.count %>개의 오류가 발생했습니다:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside">
                <% organization.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <%= form.label :name, "조직명", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, 
            class: "tremor-input mt-1",
            placeholder: "조직명 입력" %>
      </div>

      <div class="sm:col-span-1">
        <%= form.label :code, "조직 코드", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :code, 
            class: "tremor-input mt-1",
            placeholder: "ORG001" %>
        <p class="mt-2 text-sm text-gray-500">고유한 조직 식별 코드를 입력하세요</p>
      </div>

      <div class="sm:col-span-1">
        <%= form.label :parent_id, "상위 조직", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :parent_id, 
            options_from_collection_for_select(@organizations, :id, :name, organization.parent_id),
            { include_blank: "최상위 조직" },
            class: "tremor-select mt-1" %>
      </div>

      <div class="sm:col-span-1">
        <%= form.label :manager_id, "조직장", class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :manager_id, 
            options_from_collection_for_select(@users, :id, :name, organization.manager_id),
            { include_blank: "선택하세요" },
            class: "tremor-select mt-1" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end gap-3 mt-8 pt-6 border-t border-gray-200">
    <%= link_to "취소", organizations_path, class: "tremor-button-secondary" %>
    <%= form.submit organization.new_record? ? "조직 생성" : "조직 수정", 
        class: "tremor-button-primary" %>
  </div>
<% end %>